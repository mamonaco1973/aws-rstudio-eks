apiVersion: apps/v1
kind: Deployment
metadata:
  name: rstudio-server
  labels:
    app: rstudio-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: rstudio-server
  template:
    metadata:
      labels:
        app: rstudio-server
    spec:
      containers:
      - name: rstudio
        image: ${rstudio_image}
        ports:
        - containerPort: 8787
